@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">

    <div class="bg-light p-1">
        <h3>@Model.Title</h3>
        <h5>by @Model.Author</h5>

        <span class="badge bg-success" style="float:right">
            $@Model.Price
        </span>
    </div>

    <ul>
        <li>Category: @Model.Category</li>
        <li>Classification: @Model.Classification</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Pages: @Model.PageCount</li>
        <li>Publisher: @Model.Publisher</li>
    </ul>


    <!--ADD TO CART button-->
    <form method="post" asp-page="/Shopping">

        <input type="hidden" asp-for="@Model.BookId" />

        <span class="card-text">
            <button type="submit" class="btn btn-info btn-sm float-end">Add to Cart</button>
        </span>
    </form>

</div>   


